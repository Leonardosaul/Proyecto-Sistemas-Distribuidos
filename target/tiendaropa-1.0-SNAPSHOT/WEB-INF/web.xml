<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>ControllerCliente</servlet-name>
        <servlet-class>Controller.ControllerCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerPedido</servlet-name>
        <servlet-class>Controller.ControllerPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerProducto</servlet-name>
        <servlet-class>Controller.ControllerProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerArticulo</servlet-name>
        <servlet-class>Controller.ControllerArticulo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerLogin</servlet-name>
        <servlet-class>Controller.ControllerLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerRegister</servlet-name>
        <servlet-class>Controller.ControllerRegister</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerCliente</servlet-name>
        <url-pattern>/ControllerCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerPedido</servlet-name>
        <url-pattern>/ControllerPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerProducto</servlet-name>
        <url-pattern>/ControllerProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerArticulo</servlet-name>
        <url-pattern>/ControllerArticulo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerLogin</servlet-name>
        <url-pattern>/ControllerLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerRegister</servlet-name>
        <url-pattern>/ControllerRegister</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
